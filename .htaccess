# Habilitar reescrita de URL
RewriteEngine On

# Configurações CORS para permitir acesso sem restrições
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    Header set Access-Control-Max-Age "3600"
    
    # Para solicitações OPTIONS (preflight)
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Permitir acesso a todos os arquivos e diretórios
<FilesMatch ".*">
    Order allow,deny
    Allow from all
</FilesMatch>

# Permitir acesso a todos os diretórios
<Directory "/">
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
</Directory>

# Diretório padrão
DirectoryIndex index.html index.php 